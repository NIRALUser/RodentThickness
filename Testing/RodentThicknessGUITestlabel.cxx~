// Qt includes
#include <QTimer>

// DTIAtlasBuildder includes
#include "GuiCSV.h"

int main(int argc, char * argv[] ) // called with $ DTIAtlasBuilderGUITestLabels (paramFileConfigured) (configFile) (TestBinFolder)
{
  if( argc < 4 ) return -1;

  QApplication app(argc, argv); // create a QApplication

    GuiCSV TestGUI(argv[1],argv[2],"",false,"",argv[0]); // create a GuiCSV object : GuiCSV(CSVFile,ConfigFile,PathBms,noGUI,WorkDir,argv[0])

  TestGUI.show(); // open the window

  QTimer::singleShot(2000, qApp, SLOT(quit())); // close the window after 2000ms = 2s

  if(TestGUI.ImageMathPath->text().toStdString() != argv[3]) return -1;
  if(TestGUI.item(0,3)->text().toStdString() != argv[3]) return -1;

  return app.exec();
}
